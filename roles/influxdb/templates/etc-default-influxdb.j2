INFLUXD_CONFIG_PATH=/etc/influxdb/config.toml

{% if influxdb_s3 %}
# S3 credentials for InfluxDB 2.x
INFLUXDB_S3_ACCESS_KEY="{{ influxdb_s3_access_key }}"
INFLUXDB_S3_SECRET_KEY="{{ influxdb_s3_secret_key }}"
INFLUXDB_S3_BUCKET="{{ influxdb_s3_bucket }}"
{% else %}
# S3 credentials are disabled
{% endif %}