[DEFAULT]
# Default settings for all jails

# "ignoreip" can be a list of IP addresses, CIDR masks or DNS hosts. Fail2ban
# will not ban a host which matches an address in this list.
ignoreip = {{ fail2ban_jail_defaults.ignoreip }}

# Ban duration in seconds
bantime = {{ fail2ban_jail_defaults.bantime }}

# A host is banned if it has generated "maxretry" during the last "findtime"
# seconds.
findtime = {{ fail2ban_jail_defaults.findtime }}

# Number of failures before a host gets banned.
maxretry = {{ fail2ban_jail_defaults.maxretry }}

# https://denshub.com/fail2ban-server-protection/#techy-with-latest-release
bantime.increment    = {{ fail2ban_jail_defaults.bantime_increment }}
bantime.rndtime      = {{ fail2ban_jail_defaults.bantime_rndtime }}
bantime.maxtime      = {{ fail2ban_jail_defaults.bantime_maxtime }}
bantime.factor       = {{ fail2ban_jail_defaults.bantime_factor }}
bantime.overalljails = {{ fail2ban_jail_defaults.bantime_overalljails }}

